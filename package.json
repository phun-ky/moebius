    "typedoc-plugin-mdn-links": "^5.0.1",
    "typedoc-plugin-no-inherit": "^1.6.1",
    "typedoc-plugin-remark": "^2.0.1",
    "typedoc-plugin-rename-defaults": "^0.7.3",
    "typescript": "^5.7.3",
    "unified-prettier": "^2.0.1"
