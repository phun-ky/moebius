    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@types/node": "^24.0.3",
    "cobertura": "^1.0.1",
    "eslint": "^9.29.0",
    "eslint-config-phun-ky": "^1.0.6",
    "git-cz": "^4.9.0",
    "glob": "^11.0.3",
    "global-jsdom": "^26.0.0",
    "jsdom": "^26.1.0",
    "prettier": "3.6.0",
